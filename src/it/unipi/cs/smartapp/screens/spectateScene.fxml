<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.canvas.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.unipi.cs.smartapp.controllers.spectateController">
   <children>
      <Button fx:id="btnStopSpectate" layoutX="14.0" layoutY="14.0" mnemonicParsing="false" onAction="#btnGoBackPressed" prefWidth="60.0" text="Quit" />
      <Label fx:id="txtGameChat" layoutX="985.0" layoutY="30.0" text="Game chat:">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
      <Canvas fx:id="gameCanvas" height="650.0" layoutX="315.0" layoutY="42.0" width="650.0" />
      <Label layoutX="561.0" layoutY="17.0" text="Lobby name:">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
      <Label fx:id="lobbyName" layoutX="670.0" layoutY="17.0" text="lobby">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>

      <Label fx:id="lblListPlayers" layoutX="131.0" layoutY="17.0" text="Players:">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
      <TableView fx:id="tblPlayers" layoutX="14.0" layoutY="43.0" prefHeight="650.0" prefWidth="294.0">
         <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
         <columns>
            <TableColumn prefWidth="75.0" text="Team" />
            <TableColumn prefWidth="75.0" text="Name" />
            <TableColumn prefWidth="75.0" text="Score" />
            <TableColumn prefWidth="75.0" text="Status" />
         </columns>
      </TableView>

   <ScrollPane fx:id="chatPane" fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" layoutX="986.0" layoutY="57.0" prefHeight="588.0" prefWidth="265.0" style="-fx-border-color: gray; -fx-background-color: white; -fx-border-radius: 5; -fx-padding: 5;" vvalue="1.0" AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="57.0">
      <content>
         <TextFlow prefHeight="455.0" prefWidth="253.0" style="-fx-background-color: white;">
            <opaqueInsets>
               <Insets />
            </opaqueInsets>
         </TextFlow>
      </content>
   </ScrollPane>

   <Button fx:id="btnUpdateMap" layoutX="985.0" layoutY="652.0" mnemonicParsing="false" onAction="#btnUpdMapPressed" prefHeight="40.0" prefWidth="126.0" text="Update Map" />
   <Button fx:id="btnUpdStatus" layoutX="1124.0" layoutY="652.0" mnemonicParsing="false" onAction="#btnUpdStatusPressed" prefHeight="40.0" prefWidth="126.0" text="Update Status" />

   </children>
</AnchorPane>
