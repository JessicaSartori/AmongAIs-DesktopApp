      <Label layoutX="13.0" layoutY="510.0" text="Player name:">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Label>
      <Label fx:id="playerName" layoutX="100.0" layoutY="510.0" text="Guest_1234">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Label>
      <Label fx:id="txtScore" layoutX="400.0" layoutY="555.0" text="Score: ">
         <font>
            <Font name="System Bold" size="14.0" />
