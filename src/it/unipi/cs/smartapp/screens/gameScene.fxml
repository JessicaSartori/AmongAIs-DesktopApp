      <Button fx:id="btnUpdMap" layoutX="550.0" layoutY="496.0" mnemonicParsing="false" onAction="#btnUpdMapPressed" prefHeight="40.0" prefWidth="100.0" text="Update Map" />
      <Button fx:id="btnUpdStatus" layoutX="550.0" layoutY="544.0" mnemonicParsing="false" onAction="#btnUpdStatusPressed" prefHeight="40.0" prefWidth="100.0" text="Update Status" />
